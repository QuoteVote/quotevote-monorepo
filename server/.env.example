# QuoteVote Server - Example Environment Variables
# Copy this file to `.env` and fill in values as needed.

# -------------------------------------------------
# Core runtime
# -------------------------------------------------
# Node environment: dev | development | production
NODE_ENV=dev
# HTTP port for GraphQL/Express
PORT=3000

# -------------------------------------------------
# Database
# -------------------------------------------------
# Connection string for MongoDB
# e.g. mongodb://username:password@localhost:27017/dbname
DATABASE_URL=mongodb://localhost:27017/quote-vote

# -------------------------------------------------
# Authentication / JWT
# -------------------------------------------------
# Secret used to sign JWT tokens
SECRET=change-me-super-secret

# -------------------------------------------------
# Client / CORS
# -------------------------------------------------
# Public client URL used in emails and CORS
CLIENT_URL=http://localhost:5173
# Optional: Where to send "request access" form submissions
REQUEST_ACCESS_URL=

# -------------------------------------------------
# Email / SMTP (for legacy SMTP email flows)
# -------------------------------------------------
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=

# -------------------------------------------------
# SendGrid (for transactional emails)
# -------------------------------------------------
SENDGRID_API_KEY=
SENDGRID_SENDER_EMAIL=
TO_INVESTOR_EMAIL=

# -------------------------------------------------
# 3rd party / optional
# -------------------------------------------------
# Used in some legacy flows
LYRICIST_TOKEN=
